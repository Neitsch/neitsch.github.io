{
    "private": true,
    "scripts": {
        "dev": "concurrently \"next dev\" \"nodemon --exec 'next lint --fix' -e ts,tsx,js,jsx\" \"npm run graphql-codegen -- --watch\" \"npm run test -- --coverage=false --watch\"",
        "build": "next build",
        "start": "next start",
        "export": "next export",
        "serve:prod": "npm run build:prod && cd out && python3 -m http.server",
        "ts": "tsc --noEmit --incremental",
        "ts:watch": "npm run ts -- --watch",
        "graphql-codegen": "graphql-codegen --config codegen.yml",
        "lint": "next lint",
        "sitemap": "next-sitemap",
        "test": "jest",
        "mutation-test": "stryker run",
        "prepare": "husky install",
        "commit": "cz",
        "size": "size-limit",
        "size-build": "npm run graphql-codegen && npm run build && npm run sitemap && npm run export"
    },
    "lint-staged": {
        "{components,pages,lib}/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "npm run test -- --bail --findRelatedTests --coverage=false"
        ]
    },
    "dependencies": {
        "@apollo/client": "^3.4.16",
        "@emotion/cache": "11.5.0",
        "@emotion/react": "11.5.0",
        "@emotion/server": "11.4.0",
        "@emotion/styled": "11.3.0",
        "@mui/material": "^5.0.6",
        "@sentry/nextjs": "^6.13.3",
        "classnames": "2.3.1",
        "concurrently": "^6.3.0",
        "date-fns": "2.25.0",
        "graphql": "^15.6.1",
        "highlight.js": "^11.3.1",
        "next": "12.0.2",
        "next-images": "^1.8.1",
        "next-offline": "^5.0.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-markdown": "^7.1.0",
        "react-share": "^4.4.0",
        "rehype-highlight": "^5.0.0",
        "sharp": "^0.29.2"
    },
    "devDependencies": {
        "@babel/core": "^7.15.8",
        "@babel/register": "^7.15.3",
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^14.1.0",
        "@commitlint/cz-commitlint": "^13.2.1",
        "@graphql-codegen/cli": "2.2.1",
        "@graphql-codegen/fragment-matcher": "3.1.0",
        "@graphql-codegen/introspection": "2.1.0",
        "@graphql-codegen/typescript": "2.2.4",
        "@graphql-codegen/typescript-document-nodes": "2.2.0",
        "@graphql-codegen/typescript-operations": "2.1.8",
        "@graphql-codegen/typescript-react-apollo": "3.1.6",
        "@size-limit/file": "^6.0.4",
        "@stryker-mutator/core": "^5.4.1",
        "@stryker-mutator/jest-runner": "^5.4.1",
        "@swc-node/jest": "1.3.5",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.2",
        "@trivago/prettier-plugin-sort-imports": "^3.1.0",
        "@types/react": "^17.0.34",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "autoprefixer": "10.4.0",
        "babel-cli": "^6.26.0",
        "babel-jest": "^27.3.1",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "eslint-config-next": "12.0.2",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-graphql": "^4.0.0",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-only-error": "^1.0.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "graphql-tag": "^2.12.5",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.3.1",
        "lint-staged": "^11.2.6",
        "next-sitemap": "^1.6.203",
        "next-transpile-modules": "^9.0.0",
        "nodemon": "^2.0.14",
        "postcss": "8.3.11",
        "prettier": "^2.4.1",
        "prettier-eslint": "^13.0.0",
        "react-test-renderer": "^17.0.2",
        "size-limit": "^6.0.1",
        "typescript": "^4.4.4"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "size-limit": [
        {
            "path": "out/_next/static/chunks/**/*.js",
            "name": "static-files"
        }
    ]
}
